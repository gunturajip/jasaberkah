---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import GradiantText from "../shared/GradiantText.astro";
import { priorities } from "../../utils/data.ts";
import Priority from "../cards/Priority.astro";

type PrioritiesProps = {
  title: string;
  price: string;
  features: string[];
  img: ImageMetadata;
  pricelist: string[];
};

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="prioritas" class=`relative dark:bg-gradient-to-br dark:from-indigo-800 dark:to-green-950  ${className}`>
  <span
    class="w-40 h-40 rounded-full bg-gradient-to-br from-sky-200 dark:from-sky-500 from-0% via-primary dark:via-primary via-80% to-green-400 dark:to-green-600 to-110%
    absolute left-1/3 bottom-1/3"
  ></span>
  <span
    class="hidden md:block w-40 h-40 rounded-full bg-gradient-to-br from-yellow-200 dark:from-yellow-400 from-0% via-sky-500 dark:via-sky-700 via-85% to-primary dark:to-primary to-100%
    absolute right-1/4 bottom-0"
  ></span>
  <span
    class="hidden md:block w-40 h-40 rounded-full bg-gradient-to-br from-green-300 dark:from-green-500 from-0% via-primary dark:via-primary via-80% to-sky-400 dark:to-sky-600 to-110%
    absolute right-1/3 top-1/3"
  ></span>
  <span
    class="hidden md:block w-40 h-40 rounded-full bg-gradient-to-br from-green-300 dark:from-green-500 from-0% via-primary dark:via-primary via-80% to-sky-400 dark:to-sky-600 to-110%
    absolute right-3/4 top-1/3"
  ></span>
  <Container className="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
    {
      priorities.map((solution: PrioritiesProps, index: number) => {
        const flexRow = "midmd:flex-row";
        return (
          <div class={`w-100 py-10 md:py-16`}>
            <div
              class={`flex flex-col gap-10 lg:gap-12 ${flexRow} mx-auto max-w-7xl w-full`}
            >
              <div class="max-w-full mx-auto w-11/12 flex-1 flex midmd:w-7/12 lg:w-1/2 flex-col">
                <div class="text-center">
                  <Title>
                    {solution.title}
                  </Title>
                  <Title>
                    <GradiantText>{solution.price}</GradiantText>
                  </Title>
                </div>
                <div class="mt-8 flex gap-8 flex-row">
                  <Priority
                    features={solution.features}
                  />
                </div>
              </div>
            </div>
          </div>
        );
      })
    }
  </Container>
</section>
